{
    "name": "bbs-lab/lighthouse-persisted-queries",
    "description": "Laravel Lighthouse middleware to handle GraphQL persisted queries",
    "keywords": [
        "laravel",
        "lighthouse-persisted-queries"
    ],
    "homepage": "https://github.com//lighthouse-persisted-queries",
    "license": "MIT",
    "authors": [
        {
            "name": "MikaÃ«l Popowicz",
            "email": "mikael.popowicz@big-boss-studio.com",
            "role": "Developer"
        },
        {
            "name": "BBS Lab",
            "email": "paris@big-boss-studio.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "spatie/laravel-package-tools": "^1.4.3",
        "illuminate/contracts": "^7.0|^8.0",
        "nuwave/lighthouse": "^4.0|^5.0"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^5.0|^6.0",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.9",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "BBSLab\\LighthousePersistedQueries\\": "src",
            "BBSLab\\LighthousePersistedQueries\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BBSLab\\LighthousePersistedQueries\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BBSLab\\LighthousePersistedQueries\\LighthousePersistedQueriesServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
